@if (this.Request.IsAuthenticated)
{
    <text>
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="#">Hello @this.User.Identity.Name!</a>
            </li>
            <li>
                @this.Html.ActionLink("Sign out", "SignOut", "Account")
            </li>
        </ul>
    </text>
}